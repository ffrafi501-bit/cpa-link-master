<!DOCTYPE html>
<html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="container mt-4">
    <div class="d-flex justify-content-between">
        <h2>Dashboard (<%= user.username %>) - <%= user.plan.toUpperCase() %>
        </h2>
        <a href="/logout" class="btn btn-danger">Logout</a>
    </div>

    <div class="card p-3 my-4 bg-light">
        <h4>Create New Link</h4>
        <form action="/shorten" method="POST">
            <input type="url" name="originalUrl" class="form-control mb-2"
                placeholder="Paste CPA Offer Link (https://...)" required>
            <input type="text" name="customAlias" class="form-control mb-2"
                placeholder="Custom Name (e.g., gift-card) - Optional">
            <button type="submit" class="btn btn-success">Create Link</button>
        </form>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Short Link</th>
                <th>Target</th>
                <th>Clicks</th>
            </tr>
        </thead>
        <tbody>
            <% links.forEach(link=> { %>
                <tr>
                    <td>
                        <a href="/<%= link.shortCode %>" target="_blank">
                            <%= link.shortCode %>
                        </a>
                    </td>
                    <td>
                        <%= link.originalUrl.substring(0, 30) %>...
                    </td>
                    <td>
                        <%= link.clicks %>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
</body>

</html>