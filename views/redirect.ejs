<!DOCTYPE html>
<html>

<head>
    <title>Please Wait...</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .ad-space {
            width: 100%;
            height: 250px;
            background: #ddd;
            margin: 20px 0;
            text-align: center;
            padding-top: 100px;
        }
    </style>
</head>

<body class="text-center p-5">
    <h2>Please wait... <span id="timer">5</span> seconds</h2>

    <!-- আপনার অ্যাড কোড এখানে বসাবেন (Adsterra/Google Ads) -->
    <div class="ad-space">
        <h3>ADVERTISEMENT HERE</h3>
    </div>
    <!-- অ্যাড কোড শেষ -->

    <a id="goBtn" href="<%= destination %>" class="btn btn-primary btn-lg disabled">Go to Link</a>

    <script>
        let time = 5;
        const timerSpan = document.getElementById('timer');
        const btn = document.getElementById('goBtn');

        const interval = setInterval(() => {
            time--;
            timerSpan.innerText = time;
            if (time <= 0) {
                clearInterval(interval);
                btn.classList.remove('disabled');
                btn.innerText = "Click Here to Continue";
            }
        }, 1000);
    </script>
</body>

</html>