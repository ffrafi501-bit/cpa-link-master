<!DOCTYPE html>
<html>

<head>
    <title>Please Wait...</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .ad-box {
            height: 250px;
            background: #eee;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 20px 0;
            border: 2px dashed #ccc;
        }
    </style>
</head>

<body class="text-center p-5">
    <h2 class="mb-4">Loading your link in <span id="timer" class="text-danger">5</span> seconds...</h2>

    <div class="ad-box">
        <h3>YOUR AD CODE HERE</h3>
    </div>
    <a id="goBtn" href="<%= destination %>" class="btn btn-primary btn-lg disabled mt-3">Go to Link</a>

    <script>
        let time = 5;
        const timerSpan = document.getElementById('timer');
        const btn = document.getElementById('goBtn');

        const interval = setInterval(() => {
            time--;
            timerSpan.innerText = time;
            if (time <= 0) {
                clearInterval(interval);
                btn.classList.remove('disabled');
                btn.innerText = "Click Here to Proceed";
            }
        }, 1000);
    </script>
</body>

</html>